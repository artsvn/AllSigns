{
    "name": "survanetwork/allsigns",
    "description": "Turn signs into World Teleport and Command Signs",
    "version": "2.0.2",
    "type": "project",
    "keywords": [
        "world",
        "pocketmine",
        "command",
        "sign",
        "teleport"
    ],
    "homepage": "https://plugins.surva.net/#allsigns",
    "license": "MIT",
    "authors": [
        {
            "name": "Jarne",
            "homepage": "https://github.com/jarne",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/survanetwork/AllSigns/issues",
        "source": "https://github.com/survanetwork/AllSigns"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.5",
        "pocketmine/pocketmine-mp": "^4.2",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "code-analyze": "./vendor/bin/phpstan analyze -l 3 src",
        "code-analyze-save-report": "./vendor/bin/phpstan analyze -l 3 --error-format junit src > test-results/phpstan-result/junit.xml",
        "check-format": "./vendor/bin/phpcs --standard=PSR12 src",
        "check-format-save-report": "./vendor/bin/phpcs --standard=PSR12 --report=junit src > test-results/phpcs-result/junit.xml",
        "fix-format": "./vendor/bin/phpcbf --standard=PSR12 src"
    }
}
